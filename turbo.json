{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^prisma:generate"]
    },
    "prisma:generate": {
      "dependsOn": ["^prisma:generate"],
      "cache": false
    },
    "prisma:migrate:dev": {
      "dependsOn": ["^prisma:generate"],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^prisma:migrate:dev"],
      "cache": false,
      "persistent": true
    }
  }
}
